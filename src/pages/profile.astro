  .contact-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
    color: var(--color-text);
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .contact-link:hover {
    background: #e9ecef;
    text-decoration: none;
  }

  .contact-link .icon {
    font-size: 1.5rem;
  }

  @media (max-width: 768px) {
    .page-title {
